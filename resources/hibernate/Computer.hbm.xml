<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.emaunzpa.computerdatabase.model.Computer" table = "computer">
      
      <meta attribute = "class-description">This class contains the computer detail.</meta>
      
      <id name = "id" type = "integer" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "name" type = "string"/>
      <property name = "introducedDate" column = "introduced" type = "date"/>
      <property name = "discontinuedDate" column = "discontinued" type = "date"/>
      
      <many-to-one name = "manufacturer" class="com.emaunzpa.computerdatabase.model.Manufacturer" lazy="false" fetch="join">
      		<column name="company_id"></column>
      </many-to-one>
      
   </class>
</hibernate-mapping>