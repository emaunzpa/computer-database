<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Computer" table = "computer">
      
      <meta attribute = "class-description">This class contains the computer detail.</meta>
      
      <id name = "id" type = "INTEGER" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "name" type = "VARCHAR"/>
      <property name = "introduced" column = "introduced" type = "DATE"/>
      <property name = "discontinued" column = "discontinued" type = "DATE"/>
      <property name = "manyfacturerId" column = "company_id" type = "INTEGER"/>
      
   </class>
</hibernate-mapping>