<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>computer-database</display-name>
  
  	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/views/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	
	<servlet>
		<servlet-name>ListComputers</servlet-name>
		<servlet-class>com.emaunzpa.computerdatabase.servlet.ListComputers</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ListComputers</servlet-name>
		<url-pattern>/views/listComputers</url-pattern>
	</servlet-mapping>

</web-app>